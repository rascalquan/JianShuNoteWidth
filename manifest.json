{
	"manifest_version": 2,

	"name": "简书调宽",
	"description": "该扩展程序可以调整简书文章页面宽度",
	"version": "1.0",
	"author":"rascalquan",

	"background":{
		"scripts":["background.js"]
	},
	"page_action":{
		"default_icon":{
			"24":"icon_24.png",
			"38":"icon_38.png"
			},
		"default_popup": "popup.html",
		"default_title":"简书调宽"
	},
	"permissions": [
		"tabs"
	],
	"content_scripts":[{
		"matches":["http://www.jianshu.com/p/*"],
		"js": ["contentscript.js"]
		}	
	]

}